@using React.AspNet
@using React.Router

@{
    Layout = "_Layout";
}

@Html.ReactRouter("RootComponent", new { }, preRender: x => x("var serverStyleSheet = new Styled.ServerStyleSheet();"), transformRender: (component) => $"serverStyleSheet.collectStyles({component})", postRender: x => ViewBag.ServerStyles = x("serverStyleSheet.getStyleTags()"))
	<script src="/components-bundle.generated.js"></script>
	@Html.ReactInitJavaScript()
